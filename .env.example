# Supabase Database Configuration
# CRITICAL: Using Transaction mode (port 6543) for better connection pooling
# Get these from: https://supabase.com/dashboard/project/_/settings/database
DB_NAME=postgres
DB_USER=your_supabase_user
DB_PASSWORD=your_database_password
DB_HOST=your-project.pooler.supabase.com
DB_PORT=6543

# Django Configuration
# Generate new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Cloudinary Configuration
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Sheets Export Configuration (Optional)
# Share your Google Sheet with service account email: your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit

# JWT Token Configuration (Optional - defaults provided)
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=90
